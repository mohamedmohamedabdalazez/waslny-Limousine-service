@model WaslnyLib.Entity.Car

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../../Front/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Car<i class="ion-ios-arrow-forward"></i></a></span> <span>Delete <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Car</h1>
            </div>
        </div>
    </div>
</section>



<div class="request-details">
    <div class="container">
        <nav class="pt-4" aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-edit">
                <li class="breadcrumb-item"></li>
            </ol>
        </nav>



        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    <p>Color</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarColor)
                </dd>

                <dt>
                    <p>Brand</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarBrand)
                </dd>

                <dt>
                    <p>Model</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarModel)
                </dd>

                <dt>
                    <p>Version</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarVersion)
                </dd>

                <dt>
                    <p>Type</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarType)
                </dd>

                <dt>
                    <p>Capacity</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarCapacity)
                </dd>

                <dt>
                    <p>Plate Number</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarPN)
                </dd>

                <dt>
                    <p>License End Date</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarLED)
                </dd>

                <dt>
                    <p>Is Rented</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarRented)
                </dd>

                <dt>
                    <p>Kilometer Dashboard</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarKMDashboard)
                </dd>

                <dt>
                    <p>Photo</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarPhoto)
                </dd>

                <dt>
                    <p>Is Available</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CarIsAvailable)
                </dd>

                <dt>
                    <p>Is Deleted</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsDeleted)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>