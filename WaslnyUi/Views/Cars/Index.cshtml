@model IEnumerable<WaslnyLib.Entity.Car>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../../Front/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Car<i class="ion-ios-arrow-forward"></i></a></span> <span>Index <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Car</h1>
            </div>
        </div>
    </div>
</section>



        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-hover">
            <tr>
                <th>
                    <p style="margin-right: 20px;">Color</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Brand</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Model</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Version</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Type</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Capacity</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Plate Number</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">License End Date</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Is Rented</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Kilometer Dashboard</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Photo</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Is Available</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Is Deleted</p>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarColor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarBrand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarModel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarVersion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarCapacity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarPN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarLED)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarRented)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarKMDashboard)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarPhoto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarIsAvailable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CarID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CarID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CarID })
                    </td>
                </tr>
            }

        </table>
