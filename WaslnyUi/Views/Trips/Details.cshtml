
@model WaslnyLib.Entity.Trip

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../../Front/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Trip<i class="ion-ios-arrow-forward"></i></a></span> <span>Details <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Trip</h1>
            </div>
        </div>
    </div>
</section>

<div class="request-details">
    <div class="container">
        <nav class="pt-4" aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-edit">
                <li class="breadcrumb-item"></li>
            </ol>
        </nav>

        <div>
            <h4>Trip</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    <p>Booking DateTime</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TripBookingDT)
                </dd>

                <dt>
                    <p>Real Travel DateTime</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TripRealTravelDT)
                </dd>

                <dt>
                    <p>Predicted Travel DateTime</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TripPredictedTravelDT)
                </dd>

                <dt>
                    <p>Arrival DateTime</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TripArrivalDT)
                </dd>

                <dt>
                    <p>Start Kilometer</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TripStartKM)
                </dd>

                <dt>
                    <p>End Kilometer</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TripEndKM)
                </dd>

                <dt>
                    <p>Passengers</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TripPassengers)
                </dd>
                <dt>
                    <p>Trip Status</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TripStatus)
                </dd>

                <dt>
                    <p>Is Deleted</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsDeleted)
                </dd>

                <dt>
                    <p>Car Plate Number</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Car.CarPN)
                </dd>

                <dt>
                    <p>Customer Phone</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Customer.CustomerPhone)
                </dd>

                <dt>
                    <p>Driver Phone</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Driver.DriverPhoto)
                </dd>

                <dt>
                    <p>Route From</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Route.RouteTo)
                </dd>
                <dt>
                    <p>Driver Rating</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TripDriverRating)
                </dd>

                <dt>
                    <p>Car Rating</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TripCarRating)
                </dd>

                <dt>
                    <p>Comments</p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TripComments)
                </dd>
            </dl>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.TripID }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>