@model WaslnyLib.Entity.Price

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-control {
        text-align: center;
        margin-left: 5px;
    }
</style>

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../../Front/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Price<i class="ion-ios-arrow-forward"></i></a></span> <span>Edit <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Price</h1>
            </div>
        </div>
    </div>
</section>





<div class="request-details">
    <div class="container">
        <nav class="pt-4" aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-edit">
                <li class="breadcrumb-item"></li>
            </ol>
        </nav>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PriceID)

        <div class="form-group">
            <p style="margin-left: 15px;">Route ID</p>
            <div class="col-md-10">
                @Html.DropDownList("RouteID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RouteID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p style="margin-left: 15px;">Car Classification ID</p>
            <div class="col-md-10">
                @Html.DropDownList("CarClassificationID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CarClassificationID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <p style="margin-left: 15px;">Price</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PriceMoney, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @step = "1" } })
                @Html.ValidationMessageFor(model => model.PriceMoney, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <p style="margin-left: 15px;">Is Deleted</p>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsDeleted)
                    @Html.ValidationMessageFor(model => model.IsDeleted, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
