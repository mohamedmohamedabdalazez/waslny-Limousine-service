<script>
    function printReport(reportType, format) {
        const urlMap = {
            audit: '/Report/auditsreport',
            driver: '/Report/driversreport',
            car: '/Report/carsreport',
            trip: '/Report/tripsreport'
        };
        const formatMap = {
            PDF: 'PDF',
            Word: 'Word',
            Excel: 'Excel',
            Image: 'Image'
        };

        if (urlMap[reportType] && formatMap[format]) {
            window.open('', '_new').location.href = `${urlMap[reportType]}${formatMap[format]}`;
        } else {
            console.error('Invalid report type or format');
        }
    }

    document.querySelectorAll('.nav-link').forEach(link => {
        link.addEventListener('click', event => {
            const reportType = event.target.getAttribute('data-report-type');
            const format = event.target.getAttribute('data-format');
            printReport(reportType, format);
        });
    });
</script>