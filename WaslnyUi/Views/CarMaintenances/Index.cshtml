@model IEnumerable<WaslnyLib.Entity.CarMaintenance>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('../../Front/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Car Maintenance<i class="ion-ios-arrow-forward"></i></a></span> <span>Index <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Car Maintenance</h1>
            </div>
        </div>
    </div>
</section>


<div class="request-details">
    <div class="container">
        <nav class="pt-4" aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-edit">
                <li class="breadcrumb-item"></li>
            </ol>
        </nav>


        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-hover">
            <tr>
                <th>
                    <p style="margin-right: 20px;">Plate Number</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Maintenance Date</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Maintenance Details</p>
                </th>
                <th>
                    <p style="margin-right: 20px;">Is Deleted</p>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Car.CarPN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarMaintenanceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarMaintenanceDetails)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CarMaintenanceID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CarMaintenanceID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CarMaintenanceID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
